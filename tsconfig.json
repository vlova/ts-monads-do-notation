{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "lib": [
            "esnext.asynciterable",
            "es2019",
            "dom"
        ],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": false,
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ],
        "strict": true,
        "skipLibCheck": true,
        "rootDirs": [
            "./src"
        ],
        "jsx": "react",
        "outDir": "./lib",
        "declaration": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}